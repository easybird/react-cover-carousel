<StyleRoot>
    <ReactCoverCarousel
        mediaQueries={{
        backgroundColor: 'white',
        width: '100vw',
        '@media (max-width: 900px)': {
            height: '600px',
        },
        '@media (min-width: 900px)': {
            height: '800px',
        },
        }}
        displayQuantityOfSide={2}
        activeImageStyle={{
            margin: '10em',
        }}
        infiniteScroll={true}
        navigation={true}
        enableHeading={false}
        enableScroll={false}
        activeImageIndex={3}
        otherFigureRotation={0}
        activeFigureScale={2}
        otherFigureScale={0.9}
        autoFocus={true}
        PreviousButton={
            <FontAwesomeIcon style={{color: 'black', marginRight: '3em'}} icon={faArrowLeft} size="2x" />
        }
        NextButton={
            <FontAwesomeIcon style={{color: 'black', marginLeft: '3em'}} icon={faArrowRight} size="2x" />
        }
    >
        {images}
    </ReactCoverCarousel>
</StyleRoot>